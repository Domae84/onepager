<mvc:View controllerName="domae.privat.SteckBriefUI.controller.Root"
          xmlns:mvc="sap.ui.core.mvc"
          xmlns:core="sap.ui.core"
          xmlns:layout="sap.ui.layout"
          xmlns="sap.m"
          displayBlock="true">
    <App id="idAppControl">
        <pages>
            <Page showHeader="false">
                <content>
                    <layout:Grid class="upperGrid">
                        <layout:content>
                            <HBox justifyContent="Center" class="upperGridElements">
                                <Image class="profilePic"
                                       src="./images/domae_gedreht_lol.jpg"
                                       densityAware="false">
                                </Image>
                                <layoutData>
                                    <layout:GridData span="L4M4S4"/>
                                </layoutData>
                            </HBox>
                            <VBox class="upperGridElements sapUiLargeMarginTop sapUiLargeMarginBegin">
                                <HBox>
                                    <Text class="nameTitle nameBox" text="{i18n>name}"/>
                                </HBox>
                                <HBox>
                                    <Text class="descriptionTitle descBox" text="{i18n>jobTitle}"/>
                                </HBox>
                                <layoutData>
                                    <layout:GridData span="L8M8S8"/>
                                </layoutData>
                            </VBox>

                        </layout:content>
                    </layout:Grid>
                    <layout:BlockLayout id="BlockLayout">
                        <layout:BlockLayoutRow>
                            <!--Left bar -->
                            <layout:BlockLayoutCell class="skillBox onePadding" width="1">
                                <layout:BlockLayout>
                                    <!--Contact-->
                                    <layout:BlockLayoutRow>
                                        <layout:BlockLayoutCell class="onePadding" title="Contact">
                                            <layout:Grid class="noMarginPaddingLeftChild">
                                                <layout:content>
                                                    <core:Icon
                                                            src="sap-icon://call">
                                                        <core:layoutData>
                                                            <layout:GridData span="L2M2S2"/>
                                                        </core:layoutData>
                                                    </core:Icon>
                                                    <Text text="{i18n>mobile}">
                                                        <layoutData>
                                                            <layout:GridData span="L10M10S10"/>
                                                        </layoutData>
                                                    </Text>
                                                </layout:content>
                                            </layout:Grid>
                                            <layout:Grid class="noMarginPaddingLeftChild">
                                                <layout:content>
                                                    <core:Icon
                                                            src="sap-icon://email">
                                                        <core:layoutData>
                                                            <layout:GridData span="L2M2S2"/>
                                                        </core:layoutData>
                                                    </core:Icon>
                                                    <Text text="{i18n>mail}">
                                                        <layoutData>
                                                            <layout:GridData span="L10M10S10"/>
                                                        </layoutData>
                                                    </Text>
                                                </layout:content>
                                            </layout:Grid>
                                            <layout:Grid class="noMarginPaddingLeftChild" vSpacing="0">
                                                <layout:content>
                                                    <core:Icon
                                                            src="sap-icon://home">
                                                        <core:layoutData>
                                                            <layout:GridData span="L2M2S2"/>
                                                        </core:layoutData>
                                                    </core:Icon>
                                                    <layout:VerticalLayout>
                                                        <Text text="{i18n>street}"/>
                                                        <Text text="{i18n>zip} {i18n>town}"/>
                                                        <layout:layoutData>
                                                            <layout:GridData span="L10M10S10"/>
                                                        </layout:layoutData>
                                                    </layout:VerticalLayout>
                                                </layout:content>
                                            </layout:Grid>
                                        </layout:BlockLayoutCell>
                                    </layout:BlockLayoutRow>
                                    <!--Education-->
                                    <layout:BlockLayoutRow>
                                        <layout:BlockLayoutCell class="onePadding" title="{i18n>lbEducationTitle}">
                                            <layout:Grid class="noMarginPaddingLeftChild sapUiSmallMarginBottom"
                                                         defaultSpan="L12M12S12" vSpacing="0">
                                                <layout:content>
                                                    <Text text="{i18n>lbBachelorName}" class="titleBold"/>
                                                    <Text text="{i18n>lbBachelorTitle}"/>
                                                    <Text text="{i18n>lbBachelorTown}"/>
                                                    <Text text="{i18n>lbBachelorPeriod}" class="textEmph"/>
                                                </layout:content>
                                            </layout:Grid>
                                            <layout:Grid class="noMarginPaddingLeftChild sapUiSmallMarginBottom"
                                                         defaultSpan="L12M12S12" vSpacing="0">
                                                <layout:content>
                                                    <Text text="{i18n>lbDiplomaName}" class="titleBold"/>
                                                    <Text text="{i18n>lbDiplomaTitle}"/>
                                                    <Text text="{i18n>lbDiplomaTown}"/>
                                                    <Text text="{i18n>lbDiplomaPeriod}" class="textEmph"/>
                                                </layout:content>
                                            </layout:Grid>
                                            <layout:Grid class="noMarginPaddingLeftChild" defaultSpan="L12M12S12"
                                                         vSpacing="0">
                                                <layout:content>
                                                    <Text text="{i18n>lbApprenticeName}" class="titleBold"/>
                                                    <Text text="{i18n>lbApprenticeTitle}"/>
                                                    <Text text="{i18n>lbApprenticeTown}"/>
                                                    <Text text="{i18n>lbApprenticePeriod}" class="textEmph"/>
                                                </layout:content>
                                            </layout:Grid>
                                        </layout:BlockLayoutCell>
                                    </layout:BlockLayoutRow>
                                    <!--Trainings-->
                                    <layout:BlockLayoutRow>
                                        <layout:BlockLayoutCell class="onePadding" title="{i18n>lbTrainingsTitle}">
                                            <layout:Grid class="noMarginPaddingLeftChild">
                                                <layout:content>
                                                    <core:Icon
                                                            src="sap-icon://circle-task-2">
                                                        <core:layoutData>
                                                            <layout:GridData span="L2M2S2"/>
                                                        </core:layoutData>
                                                    </core:Icon>
                                                    <Link
                                                            text="{i18n>lbTrainingsBc400Name}"
                                                            target="_blank"
                                                            href="{i18n>lbTrainingsBc400Url}"
                                                            tooltip="{i18n>lbTrainingsBc400Url}">
                                                        <layoutData>
                                                            <layout:GridData span="L10M10S10"/>
                                                        </layoutData>
                                                    </Link>
                                                </layout:content>
                                            </layout:Grid>
                                            <layout:Grid class="noMarginPaddingLeftChild">
                                                <layout:content>
                                                    <core:Icon
                                                            src="sap-icon://circle-task-2">
                                                        <core:layoutData>
                                                            <layout:GridData span="L2M2S2"/>
                                                        </core:layoutData>
                                                    </core:Icon>
                                                    <Link
                                                            text="{i18n>lbTrainingsGw100Name}"
                                                            target="_blank"
                                                            href="{i18n>lbTrainingsGw100Url}"
                                                            tooltip="{i18n>lbTrainingsGw100Url}">
                                                        <layoutData>
                                                            <layout:GridData span="L10M10S10"/>
                                                        </layoutData>
                                                    </Link>
                                                </layout:content>
                                            </layout:Grid>
                                            <layout:Grid class="noMarginPaddingLeftChild">
                                                <layout:content>
                                                    <core:Icon
                                                            src="sap-icon://circle-task-2">
                                                        <core:layoutData>
                                                            <layout:GridData span="L2M2S2"/>
                                                        </core:layoutData>
                                                    </core:Icon>
                                                    <layout:VerticalLayout>
                                                        <Link
                                                                text="{i18n>lbTrainingsHa300Name}"
                                                                target="_blank"
                                                                href="{i18n>lbTrainingsHa300Url}"
                                                                tooltip="{i18n>lbTrainingsHa300Url}">
                                                            <layoutData>
                                                                <layout:GridData span="L10M10S10"/>
                                                            </layoutData>
                                                        </Link>
                                                    </layout:VerticalLayout>
                                                </layout:content>
                                            </layout:Grid>
                                        </layout:BlockLayoutCell>
                                    </layout:BlockLayoutRow>
                                    <!--Hobbies-->
                                    <layout:BlockLayoutRow>
                                        <layout:BlockLayoutCell class="onePadding" title="{i18n>lbInterestsTitle}">
                                            <layout:Grid class="noMarginPaddingLeftChild">
                                                <layout:content>
                                                    <core:Icon
                                                            src="sap-icon://physical-activity">
                                                        <core:layoutData>
                                                            <layout:GridData span="L2M2S2"/>
                                                        </core:layoutData>
                                                    </core:Icon>
                                                    <Text text="{i18n>lbInterestsTriathlon}">
                                                        <layoutData>
                                                            <layout:GridData span="L10M10S10"/>
                                                        </layoutData>
                                                    </Text>
                                                </layout:content>
                                            </layout:Grid>
                                            <layout:Grid class="noMarginPaddingLeftChild">
                                                <layout:content>
                                                    <core:Icon
                                                            src="sap-icon://card">
                                                        <core:layoutData>
                                                            <layout:GridData span="L2M2S2"/>
                                                        </core:layoutData>
                                                    </core:Icon>
                                                    <Text text="{i18n>lbInterestsSnowHike}">
                                                        <layoutData>
                                                            <layout:GridData span="L10M10S10"/>
                                                        </layoutData>
                                                    </Text>
                                                </layout:content>
                                            </layout:Grid>
                                            <layout:Grid class="noMarginPaddingLeftChild">
                                                <layout:content>
                                                    <core:Icon
                                                            src="sap-icon://flight">
                                                        <core:layoutData>
                                                            <layout:GridData span="L2M2S2"/>
                                                        </core:layoutData>
                                                    </core:Icon>
                                                    <layout:VerticalLayout>
                                                        <Text text="{i18n>lbInterestsTraveling}"/>
                                                        <layout:layoutData>
                                                            <layout:GridData span="L10M10S10"/>
                                                        </layout:layoutData>
                                                    </layout:VerticalLayout>
                                                </layout:content>
                                            </layout:Grid>
                                            <layout:Grid class="noMarginPaddingLeftChild">
                                                <layout:content>
                                                    <core:Icon
                                                            src="sap-icon://source-code">
                                                        <core:layoutData>
                                                            <layout:GridData span="L2M2S2"/>
                                                        </core:layoutData>
                                                    </core:Icon>
                                                    <layout:VerticalLayout>
                                                        <Text text="{i18n>lbInterestsProgramming}"/>
                                                        <layout:layoutData>
                                                            <layout:GridData span="L10M10S10"/>
                                                        </layout:layoutData>
                                                    </layout:VerticalLayout>
                                                </layout:content>
                                            </layout:Grid>
                                        </layout:BlockLayoutCell>
                                    </layout:BlockLayoutRow>
                                </layout:BlockLayout>
                            </layout:BlockLayoutCell>
                            <!--Main body -->
                            <layout:BlockLayoutCell class="textBox onePadding" width="3">
                                <layout:BlockLayout>
                                    <!--Profile-->
                                    <layout:BlockLayoutRow>
                                        <layout:BlockLayoutCell title="{i18n>mainProfileTitle}" class="onePadding">
                                            <Text text="{i18n>mainProfileText}"/>
                                        </layout:BlockLayoutCell>
                                    </layout:BlockLayoutRow>
                                    <!--Professional Experience-->
                                    <layout:BlockLayoutRow>
                                        <layout:BlockLayoutCell
                                                title="{i18n>mainProfExpTitle}"
                                                class="onePadding">
                                        </layout:BlockLayoutCell>
                                    </layout:BlockLayoutRow>
                                    <!-- Fellowship -->
                                    <layout:BlockLayoutRow>
                                        <layout:BlockLayoutCell title="" class="onePadding">
                                            <VBox class="sapUiTinyMarginBottom">
                                                <Title text="{i18n>mainProfExpFellowTitle}" titleStyle="H2"
                                                       class="noShadow titleBold"/>
                                                <Title text="{i18n>mainProfExpFellowPlace}" titleStyle="H4"
                                                       class="noShadow"/>
                                            </VBox>
                                            <VBox>
                                                <Text class="cellBox"
                                                      text="{i18n>mainProfExpFellowDesc}"/>
                                                <Title text="{i18n>mainProfExpCoreActivities}" titleStyle="H5"
                                                       class="noShadow titleBold sapUiTinyMarginTop"/>
                                                <FormattedText htmlText="{profExpList>/fellowList}"/>
                                            </VBox>
                                        </layout:BlockLayoutCell>
                                    </layout:BlockLayoutRow>
                                    <!-- MBVD -->
                                    <layout:BlockLayoutRow>
                                        <layout:BlockLayoutCell title="" class="onePadding">
                                            <VBox class="sapUiTinyMarginBottom">
                                                <Title text="{i18n>mainProfExpMbvdTitle}" titleStyle="H2"
                                                       class="noShadow titleBold"/>
                                                <Title text="{i18n>mainProfExpMbvdPlace}" titleStyle="H4"
                                                       class="noShadow"/>
                                            </VBox>
                                            <VBox>
                                                <Text class="cellBox" text="{i18n>mainProfExpMbvdDesc}"/>
                                                <Title text="{i18n>mainProfExpCoreActivities}" titleStyle="H5"
                                                       class="noShadow titleBold sapUiTinyMarginTop"/>
                                                <FormattedText htmlText="{profExpList>/mbvdList}"/>
                                            </VBox>
                                        </layout:BlockLayoutCell>
                                    </layout:BlockLayoutRow>
                                    <!-- Thomas Cook -->
                                    <layout:BlockLayoutRow>
                                        <layout:BlockLayoutCell title="" class="onePadding">
                                            <VBox class="sapUiTinyMarginBottom">
                                                <Title text="{i18n>mainProfExpTcTitle}" titleStyle="H2"
                                                       class="noShadow titleBold"/>
                                                <Title text="{i18n>mainProfExpTcPlace}" titleStyle="H4"
                                                       class="noShadow"/>
                                            </VBox>
                                            <VBox>
                                                <Text class="cellBox" text="{i18n>mainProfExpTcDesc}"/>
                                                <Title text="{i18n>mainProfExpCoreActivities}" titleStyle="H5"
                                                       class="noShadow titleBold sapUiTinyMarginTop"/>
                                                <FormattedText htmlText="{profExpList>/tcList}"/>
                                            </VBox>
                                        </layout:BlockLayoutCell>
                                    </layout:BlockLayoutRow>
                                    <!-- Ferrero -->
                                    <layout:BlockLayoutRow>
                                        <layout:BlockLayoutCell title="" class="onePadding">
                                            <VBox class="sapUiTinyMarginBottom">
                                                <Title text="{i18n>mainProfExpFrTitle}" titleStyle="H2"
                                                       class="noShadow titleBold"/>
                                                <Title text="{i18n>mainProfExpFrPlace}" titleStyle="H4"
                                                       class="noShadow"/>
                                            </VBox>
                                            <VBox>
                                                <Text text="{i18n>mainProfExpFrDesc}" class="cellBox"/>
                                                <Title text="{i18n>mainProfExpCoreActivities}" titleStyle="H5"
                                                       class="noShadow titleBold sapUiTinyMarginTop"/>
                                                <FormattedText htmlText="{profExpList>/frList}"/>
                                            </VBox>
                                        </layout:BlockLayoutCell>
                                    </layout:BlockLayoutRow>
                                    <!-- VW -->
                                    <layout:BlockLayoutRow>
                                        <layout:BlockLayoutCell title="" class="onePadding">
                                            <VBox class="sapUiTinyMarginBottom">
                                                <Title text="{i18n>mainProfExpVwTitle}" titleStyle="H3"
                                                       class="noShadow titleBold"/>
                                                <Title text="{i18n>mainProfExpVwPlace}" titleStyle="H4"
                                                       class="noShadow"/>
                                            </VBox>
                                            <VBox>
                                                <Text text="{i18n>mainProfExpVwDesc}" class="cellBox"/>
                                                <Title text="{i18n>mainProfExpCoreActivities}" titleStyle="H5"
                                                       class="noShadow titleBold sapUiTinyMarginTop"/>
                                                <FormattedText htmlText="{profExpList>/vwList}"/>
                                            </VBox>
                                        </layout:BlockLayoutCell>
                                    </layout:BlockLayoutRow>
                                </layout:BlockLayout>
                            </layout:BlockLayoutCell>
                        </layout:BlockLayoutRow>
                    </layout:BlockLayout>
                </content>
            </Page>
        </pages>
    </App>
</mvc:View>